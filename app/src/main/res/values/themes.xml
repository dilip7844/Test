<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="textInputStyle">@style/TextInputStyle</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="hintTextColor">@color/gray_dark</item>
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="boxStrokeColor">?android:colorBackground</item>
        <item name="placeholderTextColor">@color/gray_dark</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxBackgroundColor">@color/gray_light</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="TabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/colorSecondary</item>
        <item name="tabIndicatorColor">@color/colorSecondary</item>
        <item name="tabTextColor">@color/gray_dark</item>
        <item name="tabGravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabMode">scrollable</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabRippleColor">@color/gray_dark</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_corners_filled</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FullScreenDialog" parent="AppTheme">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowAnimationStyle">@style/FullScreenDialog</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="ProgressDialogStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>